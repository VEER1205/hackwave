        border-radius: var(--border-radius);
        width: 90%;
        max-width: 700px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
        position: relative;
      }
      .close-btn {
        color: var(--text-secondary);
        position: absolute;
        top: 15px;
        right: 25px;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
        transition: color 0.2s ease;
      }
      .close-btn:hover {
        color: var(--text-primary);
      }
      .modal-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 1rem;
