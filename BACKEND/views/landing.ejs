      // Money Animation
      function createMoneySymbol() {
        const symbols = ["₹", "$", "€", "¥", "£"];
        const container = document.getElementById("money-animations");

        const symbol = document.createElement("div");
        symbol.className = "money-symbol";
        symbol.textContent =
          symbols[Math.floor(Math.random() * symbols.length)];
        symbol.style.left = Math.random() * 100 + "%";
        symbol.style.animationDuration = Math.random() * 5 + 8 + "s";

        container.appendChild(symbol);
        const value = document.getElementById("portfolio-value");

        value.textContent = setTimeout(() => {
          symbol.remove();
        }, 13000);
      }

      

      // Create money symbols periodically
      setInterval(createMoneySymbol, 2000);
      fetchPortfolio();
