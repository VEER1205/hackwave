      /* Money Animation */
      .money-symbol {
        position: absolute;
        font-size: 20px;
        color: #10b981;
        opacity: 0.3;
        animation: float 10s infinite linear;
        pointer-events: none;
      }

      @keyframes float {
        0% {
          transform: translateY(100vh) rotate(0deg);
          opacity: 0;
        }
        10% {
          opacity: 0.3;
        }
        90% {
          opacity: 0.3;
        }
        100% {
          transform: translateY(-100px) rotate(360deg);
          opacity: 0;
        }
      }

      /* Progress Bar */
      .progress-bar {
        background-color: #374151;
        border-radius: 4px;
        overflow: hidden;
      }

      .progress-fill {
        background: linear-gradient(90deg, #10b981, #34d399);
        height: 100%;
        border-radius: 4px;
        transition: width 2s ease-in-out;
        animation: progress-glow 2s infinite;
      }

      @keyframes progress-glow {
        0%,
        100% {
          box-shadow: 0 0 5px #10b981;
        }
        50% {
          box-shadow: 0 0 20px #10b981, 0 0 30px #10b981;
        }
      }

      /* Chart Animation */
      .chart-container {
        background: linear-gradient(135deg, #1f2937, #374151);
        border-radius: 12px;
        padding: 24px;
        border: 1px solid #374151;
      }

      .chart-bar {
        background: linear-gradient(180deg, #10b981, #059669);
        border-radius: 4px 4px 0 0;
        transition: all 0.8s ease;
        animation: chart-grow 2s ease-out;
      }

      @keyframes chart-grow {
        0% {
          height: 0 !important;
        }
        100% {
          height: var(--final-height);
        }
      }

      /* Pulse Animation */
      @keyframes money-pulse {
        0%,
        100% {
          color: #10b981;
        }
        50% {
          color: #34d399;
        }
      }

      .animate-money-pulse {
        animation: money-pulse 2s infinite;
      }

      /* Count Up Animation */
      @keyframes count-up {
        0% {
          transform: translateY(20px);
          opacity: 0;
        }
        100% {
          transform: translateY(0);
          opacity: 1;
        }
      }

      .animate-count-up {
        animation: count-up 1s ease-out;
      }

      /* Message Modal Styles */
      .message-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: 1000;
        backdrop-filter: blur(5px);
      }

      .message-modal.show {
        display: flex;
        align-items: center;
        justify-content: center;
        animation: fadeIn 0.3s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      .message-content {
        background: #1f2937;
        border: 1px solid #374151;
        border-radius: 16px;
        width: 90%;
        max-width: 500px;
        max-height: 80vh;
        overflow: hidden;
        animation: slideIn 0.3s ease-out;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
      }

      @keyframes slideIn {
        from {
          transform: translateY(-50px) scale(0.9);
          opacity: 0;
        }
        to {
          transform: translateY(0) scale(1);
          opacity: 1;
        }
      }

      .message-header {
        padding: 20px;
        border-bottom: 1px solid #374151;
        background: linear-gradient(135deg, #1f2937, #111827);
      }

      .message-list {
        max-height: 400px;
        overflow-y: auto;
      }

      .message-item {
        padding: 16px 20px;
        border-bottom: 1px solid #374151;
        transition: background-color 0.2s ease;
        cursor: pointer;
      }

      .message-item:hover {
        background-color: #374151;
      }

      .message-item:last-child {
        border-bottom: none;
      }

      .message-item.unread {
